{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "demanda.pt.clean",
            "type": "shell",
            "command": "rm -rf public/blog.demanda.pt",
            "problemMatcher": []
        },
        {
            "label": "demanda.pt.develop",
            "type": "shell",
            "command": "hugo server -D",
            "options": {
                "cwd": "${workspaceFolder}/blog.demanda.pt"
            },
            "isBackground": true,
            "problemMatcher": []
        },
        {
            "label": "demanda.pt.build",
            "type": "shell",
            "command": "hugo -d ../public/blog.demanda.pt",
            "dependsOn": [
                "demanda.pt.clean"
            ],
            "options": {
                "cwd": "${workspaceFolder}/blog.demanda.pt"
            },
            "problemMatcher": []
        }
    ]
}